{
    "name": "frontend",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "tsc -b && vite build",
        "lint": "eslint src --ext .ts,.tsx,.js,.jsx --report-unused-disable-directives --max-warnings 0",
        "lint:fix": "eslint src --ext .ts,.tsx,.js,.jsx --fix",
        "format": "prettier --write 'src/**/*.{ts,tsx,js,jsx,json,css,scss,md}'",
        "preview": "vite preview",
        "lint-staged": "lint-staged",
        "generate:api": "openapi --input https://api.booksnest.org/v3/api-docs --output src/api/generated --useOptions --client axios",
        "generate:api:local": "openapi --input ./openapi.json --output src/api/generated --useOptions --client axios",
        "cypress": "cypress open",
        "cypress:run": "cypress run",
        "cy:run": "start-server-and-test dev http://localhost:3000 'cypress run'"
    },
    "dependencies": {
        "@emotion/react": "^11.14.0",
        "@emotion/styled": "^11.14.0",
        "@hookform/resolvers": "^5.0.1",
        "@mui/icons-material": "^6.4.6",
        "@mui/material": "^6.4.6",
        "@stomp/stompjs": "^7.1.1",
        "@tanstack/react-query": "^5.75.0",
        "axios": "^1.9.0",
        "country-to-iso": "^1.6.1",
        "dayjs": "^1.11.13",
        "jwt-decode": "^4.0.0",
        "notistack": "^3.0.2",
        "react": "^18.3.1",
        "react-country-flag": "^3.1.0",
        "react-dom": "^18.3.1",
        "react-hook-form": "^7.56.1",
        "react-intersection-observer": "^9.16.0",
        "react-quill": "^2.0.0",
        "react-router-dom": "^7.5.2",
        "sockjs-client": "^1.6.1",
        "zod": "^3.24.3"
    },
    "devDependencies": {
        "@commitlint/cli": "^18.4.3",
        "@commitlint/config-conventional": "^18.4.3",
        "@testing-library/cypress": "^10.0.3",
        "@types/react": "^18.3.11",
        "@types/react-dom": "^18.3.1",
        "@types/sockjs-client": "^1.5.4",
        "@typescript-eslint/eslint-plugin": "^8.11.0",
        "@typescript-eslint/parser": "^8.11.0",
        "@vitejs/plugin-react": "^4.3.3",
        "cypress": "^14.4.1",
        "eslint": "^8.53.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-react": "^7.37.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.4",
        "husky": "^8.0.3",
        "lint-staged": "^15.2.0",
        "openapi-typescript-codegen": "^0.29.0",
        "prettier": "^3.3.3",
        "start-server-and-test": "^2.0.12",
        "typescript": "~5.6.2",
        "vite": "^5.4.9",
        "vite-tsconfig-paths": "^5.1.4"
    },
    "lint-staged": {
        "src/**/*.{ts,tsx,js,jsx}": [
            "npm run lint:fix",
            "npm run format"
        ]
    }
}